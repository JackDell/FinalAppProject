<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ahame_000.seg2105.Activities.AccountLoginActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="89dp">

        <EditText
            android:id="@+id/Email_EditText_AccountLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/email_editText"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/Password_EditText_CreateAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/password_editText"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/incorrectCreds_TextView_AccountLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Incorrect email or password. Try again"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp"
            android:textStyle="italic"
            android:visibility="invisible" />

        <Button
            android:id="@+id/Login_Button_CreateAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="accLoginBttnClick"
            android:text="@string/login_button" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/CreateAccount_Button_CreateAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="createAccBttnClick"
            android:text="@string/createAccount_button" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
