<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ahame_000.seg2105.CreateAccountActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/Email_EditText_CreateAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/email_editText"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/Password_EditText_CreateAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/password_editText"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/ConfirmPassword_EditText_CreateAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/confirmPassword_editText"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/errorMassage_TextView_CreateAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp"
            android:textStyle="italic"
            android:visibility="invisible" />

        <Button
            android:id="@+id/Done_Button_CreateAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="doneCreateNewAccBttnClick"
            android:text="@string/done_button" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
