<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context="com.example.ahame_000.seg2105.EditViewChoreActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="10dp">

            <TextView
                android:id="@+id/ChoreDetails_TextView_ChoreDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.19"
                android:text="@string/choreDetails_textView"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:visibility="visible" />

            <Button
                android:id="@+id/Complete_Button_ChoreDetails"
                style="@android:style/Widget.DeviceDefault.Button.Inset"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:onClick="onDoneBttnClick"
                android:text="@string/complete_button"
                tools:text="@string/complete_button"
                android:visibility="visible"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.19"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Chore_TextView_ChoreDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/chore_textView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:visibility="visible"/>

                <EditText
                    android:id="@+id/ChoreName_EditText_ChoreDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:visibility="visible"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/CreatedByDate_Layout_ChoreDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.19"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/CreatedBy_TextView_ChoreDetails"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="@string/createdBy_textView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/CreatorName_TextView_ChoreDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textNoSuggestions|textPersonName"
                    android:visibility="visible"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/CompletedDate_ViewLayout_ChoreDetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.19"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/CompletedDateTitle_TextView_ChoreDetails"
                    android:layout_width="154dp"
                    android:layout_height="wrap_content"
                    android:text="@string/completedDate_textView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/CompletedDate_TextView_ChoreDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:visibility="visible"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.19"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/DueDate_TextView_ChoreDetails"
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:text="@string/dueDate_textView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:visibility="visible"/>

                <EditText
                    android:id="@+id/DueDate_EditText_ChoreDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="text|textPersonName"
                    android:visibility="visible"/>

            </LinearLayout>

            <TextView
                android:id="@+id/Description_TextView_ChoreDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description_textView"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:visibility="visible"/>

            <EditText
                android:id="@+id/Description_EditText_ChoreDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="left"
                android:inputType="text|textMultiLine|textCapSentences"
                android:maxLines="10"
                android:selectAllOnFocus="true"
                android:singleLine="false"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:visibility="visible" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.19"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Rewards_TextView_ChoreDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/rewards_textView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:visibility="visible"/>

                <EditText
                    android:id="@+id/Rewards_EditText_ChoreDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:visibility="visible"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.19"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Penalty_TextView_ChoreDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/penalty_textView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" />

                <EditText
                    android:id="@+id/Penalty_EditText_ChoreDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/AssignTo_Layout_ChoreDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.19"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/AssignTo_TextView_ChoreDetails"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:text="@string/assign_textView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" />

                <Spinner
                    android:id="@+id/AssignTo_Spinner_ChoreDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:spinnerMode="dialog"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.19"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Delete_Button_ChoreDetails"
                    style="@android:style/Widget.DeviceDefault.Button.Inset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onDeleteBttnClick"
                    android:text="@string/delete_button" />

                <Button
                    android:id="@+id/Save_Button_ChoreDetails"
                    style="@android:style/Widget.DeviceDefault.Button.Inset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onSaveBttnClick"
                    android:text="@string/save_button" />

            </LinearLayout>
            <TextView
                android:id="@+id/IncorrectCreds_TextView_ChoreDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18sp"
                android:textStyle="italic"
                android:visibility="invisible" />
            <Button
                android:id="@+id/AssignToMe_Button_ChoreDetails"
                style="@android:style/Widget.Button.Inset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="0.19"
                android:onClick="onAssignToMeBttnClick"
                android:text="@string/assignToMe_button"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
